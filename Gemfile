gem 'nokogiri'

gem 'devise'
gem 'omniauth'
gem 'postmark'
gem 'postmark-rails', '0.4.0'

group :development do
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-livereload'
  gem 'unicorn'
end

group :test do
  gem 'rspec-rails', :require => 'rspec'
  gem 'factory_girl_rails', :require => 'factory_girl'
  gem 'capybara'
  gem 'launchy'
  gem 'database_cleaner'

  gem 'libnotify'
end
