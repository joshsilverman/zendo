<%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/prototype/1/prototype.js', :cache => false %>
<% @page_specific_scripts_css = ["/stylesheets/store/index.css"]%>

  <% if @page_specific_scripts_js %> <%= javascript_include_tag @page_specific_scripts_js, :cache => '/cache/' + auto_js_css %> <% end %>
    <script type="text/javascript" src="../../javascripts/store/details.js"></script>
<style>
  .buy{
    cursor: pointer;
    text-decoration: underline;
    color: blue;
  }
  #recent_eggs li, #popular_eggs li {
    list-style-type: none;
    list-style-position: inside;
    float:left;
}
  .egg{
    display: block;
    width: 83px;
    height: 115px;
    overflow: hidden;
    background: url("../../images/nounproject/egg.png");
    position: relative;
    float: left;
}

.egg-box{
    display: block;
    width: 85px;
    margin: 0 25px 15px 0;
}

  .icon{
    position: relative;
    top: 30px;
    left:15px;
    display:block;
}

</style>
<div style="margin:10px auto; padding:10px; width: 600px;">
  <div style="float:left;"><img src="../../images/home/document.png"/></div>
  <div class="detail-float">


<h1 class="egg-head"><%= @document.name %></h1>

<% purchased = false %>
<% @userships.each do |u| %>
  <% if @document.id == u.document_id.to_i%>
    <% purchased = true %>
  <% end %>
<% end %>

<% if purchased %>
  <h4 class="purchased">Purchased</h4>
<% else %>
  <h4 id="<%= @document.id%>" class="buy">Get It Now</h4>
<% end %>

  <div id="content" style="display:block; clear: both; height:220px; overflow: hidden; margin-top:15px;">
    <h4>Preview</h4>
    <% html =  @document.html.split(/[<>]/) %>
    <% i = 0 %>
    <% html.each do |h| %>
      <% if i%2 == 0 && h.size>1%>
        <%= h.gsub('&nbsp;','') %><br/>
      <%end%>
      <% i+=1 %>
    <% end %>
  </div>
</div>
  <div class="cl"></div>
</div>
