<%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/prototype/1/prototype.js', :cache => false %>
<% @page_specific_scripts_css = ["/stylesheets/store/index.css"]%>

  <% if @page_specific_scripts_js %> <%= javascript_include_tag @page_specific_scripts_js, :cache => '/cache/' + auto_js_css %> <% end %>
    <script type="text/javascript" src="../../javascripts/store/details.js"></script>

<div style="margin:10px auto; padding:10px; width: 600px;">
  <div class="egg-box" style="float:left;"><div class="egg"><img src="../../images/nounproject/book1.png" class="icon"></div></div>
  <div class="detail-float">
<h1 class="egg-head"><%= @tag.name %></h1>
<ul>
  <% @documents.each do |d| %>
    <li><a href="/store/details/<%= d.id %>"><%= d.name %></a>
    <% purchased = false %>
    <% @userships.each do |u| %>
      <% if d.id == u.document_id.to_i%>
        <% purchased = true %>
      <% end %>
    <% end %>

    <% if purchased %>
      <span class="purchased">Purchased</span>
      <% purchased = false %>
    <% else %>
      <span id="<%= d.id%>" class="buy">Get It Now</span>
    <% end %>
    </li>
  <% end %>
</ul>
    
</div>
  <div class="cl"></div>
</div>
