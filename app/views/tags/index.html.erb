<div id="rename_folder_modal" class="modal" style="display:none; width:330px;">
  <div class="title">
    Rename Folder
  </div>
  <div class="content">

    <div class="clr-thin"></div>
    <div>
      <span class="option">Name:</span>
        <input id="rename_field" name="rename_field" size="30" type="text" maxlength="40"></input>
        <%= submit_tag "Rename", :id => "submit_rename" %>
        <%= image_tag "shared/fb-loader.gif", :alt => 'loading', :style => "margin-right:5px;visibility:hidden;", :id => "new_tag_loading" %>
    </div>
  </div>
</div>

<div id="delete_folder_modal" class="modal" style="display:none; width:410px;">
  <div class="title">
    Delete Folder
  </div>
  <div class="content">

    <div class="clr-thin"></div>
    <div style="text-align:center;">
      <span class="option">Are you sure you want to delete this folder and all its contents?</span><br /><br />
        <%= submit_tag "Yes. Delete it all!", :id => "submit_delete" %>
        <%= submit_tag "No. I changed my mind.", :id => "submit_cancel" %>
        <%= image_tag "shared/fb-loader.gif", :alt => 'loading', :style => "margin-right:5px;visibility:hidden;", :id => "new_tag_loading" %>
    </div>
  </div>
</div>

