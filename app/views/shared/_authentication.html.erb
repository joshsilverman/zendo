<% unless user_signed_in? %>
<div class="login">
        <a href="#" class="login-link" id="login-link">Login</a>

        <!-- DropDown -->
        <div class="dd" id="dd">

                <div class="cnt-top">
                        <div class="cnt-bottom">
                                <div class="cnt">

                                        <a href="#" class="login-link-hr" id="login-link-hr">Login</a>

                                        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                                          <%= f.text_field :email, :class => "field blink", :value => "Email", :title => "Email"%>
                                          <%= f.password_field :password, :class => "field blink", :value => "Password", :title => "Password"%>
                                          <%= f.submit "Sign in", :class=>"button notext" %>
                                          <% if devise_mapping.rememberable? -%>
                                            <%= f.check_box :remember_me, :id => "check" %> <%= f.label :remember_me, :for => "check" %>
                                          <% end %>

                                        <% end %>

                                        <div class="cl">&nbsp;</div>

                                        <p><a href="/users/password/new" class="dd-link">Lost Password?</a></p>

                                </div>
                        </div>
                </div>

        </div>
        <!-- End DropDown -->

</div>
<% else %>
  <div class="usernav">
          <ul>
                  <li class="first"><a href="/my_eggs" class="<%if controller.controller_name == 'tags'%>active<% end %>">My Eggs</a></li>
                  <li><a href="/store"class="<%if controller.controller_name == 'store'%>active<% end %>">Egg Store</a></li>
                  <li><a href="/users/edit" class="<%if controller.controller_name == 'registrations' && controller.action_name == 'edit' %>active<% end %>">Edit Account</a></li>
                  <li><a href="/users/sign_out">Log Out</a></li>
          </ul>
  </div>
<% end %>