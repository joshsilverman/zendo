<% unless user_signed_in? %>
<div class="login">
        <a href="#" class="login-link" id="login-link">Login</a>

        <!-- DropDown -->
        <div class="dd" id="dd">

                <div class="cnt-top">
                        <div class="cnt-bottom">
                                <div class="cnt">

                                        <a href="#" class="login-link-hr" id="login-link-hr">Login</a>

                                        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                                          <%= f.text_field :email, :class => "field blink", :value => "Email", :title => "Email"%>
                                          <%= f.password_field :password, :class => "field blink", :value => "Password", :title => "Password"%>
                                          <%= f.submit "Sign in", :class=>"button notext" %>
                                          <% if devise_mapping.rememberable? -%>
                                            <%= f.check_box :remember_me, :id => "check" %> <%= f.label :remember_me, :for => "check" %>
                                          <% end %>

                                        <% end %>

                                        <div class="cl">&nbsp;</div>

                                        <p><a href="#" class="dd-link">Lost Password?</a></p>

                                </div>
                        </div>
                </div>

        </div>
        <!-- End DropDown -->

</div>
<% else %>
  <span style="float:right; margin: 18px 6px 0 0;">
    Welcome, <%= current_user.first_name %>&nbsp;|&nbsp;
    <%= link_to "Edit Account", edit_user_registration_path %>&nbsp;|&nbsp;
    <%= link_to "Sign Out", destroy_user_session_path %>
  </span>
<% end %>